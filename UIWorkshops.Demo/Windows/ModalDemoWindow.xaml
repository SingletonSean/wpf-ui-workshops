<Window
    x:Class="UIWorkshops.Demos.Windows.ModalDemoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UIWorkshops.Demos.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Modal Demo"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <custom:Modal x:Name="modal" Panel.ZIndex="10">
            <Grid Width="300" Height="300">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button
                        x:Name="btnCloseModal"
                        Margin="0 10 0 0"
                        Padding="10 5"
                        Click="OnCloseModalClick"
                        Content="Close Modal" />
                </StackPanel>
            </Grid>
        </custom:Modal>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button
                x:Name="btnShowModal"
                Margin="0 10 0 0"
                Padding="10 5"
                Click="OnShowModalClick"
                Content="Show Modal" />
        </StackPanel>

    </Grid>
</Window>
