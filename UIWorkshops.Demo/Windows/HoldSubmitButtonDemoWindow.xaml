<Window
    x:Class="UIWorkshops.Demos.Windows.HoldSubmitButtonDemoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:HoldSubmitButtonControl;assembly=HoldSubmitButtonControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UIWorkshops.Demos.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HoldSubmitButtonDemoWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <custom:HoldSubmitButton
            Width="200"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="HoldSubmitButton_Click"
            Content="Hold to Submit"
            HoldDuration="0:0:2" />
    </Grid>
</Window>
